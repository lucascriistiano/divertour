<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<!-- RESTRICTED PAGES -->
	<url-mapping id="homepage_user">
		<pattern value="/minhapagina" />
		<view-id value="/pages/restricted/homepage.xhtml" />
	</url-mapping>
	
	<url-mapping id="place_register">
		<pattern value="/lugares/cadastro" />
		<view-id value="/pages/restricted/places/register.xhtml" />
	</url-mapping>
	
	<url-mapping id="guide_register">
		<pattern value="/roteiros/cadastro" />
		<view-id value="/pages/restricted/guides/register.xhtml" />
	</url-mapping>

	<!-- COMMON PAGES -->
	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/pages/common/index.xhtml" />
	</url-mapping>
	
	<url-mapping id="about">
		<pattern value="/sobre" />
		<view-id value="/pages/common/about.xhtml" />
	</url-mapping>
	
	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/pages/common/login.xhtml" />
	</url-mapping>
	
	<url-mapping id="user_register">
		<pattern value="/cadastro" />
		<view-id value="/pages/common/register.xhtml" />
	</url-mapping>
	
	<url-mapping id="places">
		<pattern value="/lugares" />
		<view-id value="/pages/common/places.xhtml" />
	</url-mapping>

	<url-mapping id="guides">
		<pattern value="/roteiros" />
		<view-id value="/pages/common/guides.xhtml" />
	</url-mapping>
	
	<url-mapping id="place_details">
		<pattern value="/lugares/#{id}" />
		<view-id value="/pages/common/places/details.xhtml" />
	</url-mapping>
	
	<url-mapping id="guide_details">
		<pattern value="/roteiros/#{id}" />
		<view-id value="/pages/common/guides/details.xhtml" />
	</url-mapping>
	
	<!-- ADMIN PAGES -->
	<url-mapping id="homepage_admin">
		<pattern value="/admin" />
		<view-id value="/pages/admin/homepage.xhtml" />
	</url-mapping>
	
	<url-mapping id="list_users">
		<pattern value="/admin/usuarios" />
		<view-id value="/pages/admin/users/list.xhtml" />
	</url-mapping>
	
	<url-mapping id="list_places">
		<pattern value="/admin/lugares" />
		<view-id value="/pages/admin/places/list.xhtml" />
	</url-mapping>
	
	<url-mapping id="list_guides">
		<pattern value="/admin/roteiros" />
		<view-id value="/pages/admin/guides/list.xhtml" />
	</url-mapping>
	
	<url-mapping id="list_cities">
		<pattern value="/admin/cidades" />
		<view-id value="/pages/admin/cities/list.xhtml" />
	</url-mapping>
	
	<url-mapping id="city_register">
		<pattern value="/admin/cidades/cadastro" />
		<view-id value="/pages/admin/cities/register.xhtml" />
	</url-mapping>
</pretty-config>